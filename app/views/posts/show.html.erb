<div id="post-show-content" class='skinny-wrapper wrapper-padding'>
  <header>
    <p class='date'> <%= @post.created_at.strftime("%A, %b, %d") %> </p>
    <h1> <%= @post.title.upcase %> </h1>
    <hr>
  </header>

  <p id='content'>
    <%= markdown @post.content %>
  </p>

  <hr>


  <div id="share-box">
      <p>Share this thought: <%= @post.title %> </p>
      <!-- Twitter -->
      <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @trgnb - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
      <!-- Facebook -->
      <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
      <!-- Google Plus -->
      <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
  </div>


  <hr>

  <%# if @user_signed_in %>
    <div id="admin_links">
      <%= link_to "Edit Article", edit_post_path(@post) %>
      <%= link_to "Delete Article", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <%# end %>

  <%= render '../views/layouts/disqus' %>
</div>
